@model AssetManager.Core.Entities.Company

@{
    ViewData["Title"] = "Create";
}

<h2>Create Company</h2>
<hr />
<div class="row">
    <!-- right column -->
    <div class="col-md-8 col-md-offset-2">
        <div class="box box-info">
            <div class="box-header with-border">

            </div>
            <form asp-controller="Companies" method="post" class="form-horizontal">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                <div class="box-body">

                    <div class="form-group">
                        <label asp-for="Name" class="control-label col-md-3">Company Name</label>
                        <div class="col-md-7">
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="ImageUrl" class="control-label col-md-3">Upload Image</label>
                        <div class="col-md-7">
                            <input type="file" asp-for="ImageUrl" class="form-control" />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="box-footer text-right">
                        <a class="btn btn-link text-left" asp-action="Index">Cancel</a>
                        <button type="submit" class="btn btn-success">
                            <i class="fa fa-check icon-white"></i>
                            Submit
                        </button>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}