@model IEnumerable<AssetManager.Core.Entities.Components>

@{
    ViewData["Title"] = "Index";
}

<h2>All Components</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="box">
    <div class="box-header">
        <div class="fixed-table-toolbar">

        </div>
    </div>
    <div class="box-body">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CategoryId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LocatonId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CompanyId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Qty)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OrderNumber)
                    </th>
                    
                    <th>
                        @Html.DisplayNameFor(model => model.PurchaseDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PurchaseCost)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MinmumAmt)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Serial)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Image)
                    </th>
                                        
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CategoryId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LocatonId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CompanyId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Qty)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrderNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PurchaseDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PurchaseCost)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MinmumAmt)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Serial)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Image)
                        </td>
                        
                        
                        <td>
                            @Html.ActionLink("Edit", "Edit", new {id=item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

