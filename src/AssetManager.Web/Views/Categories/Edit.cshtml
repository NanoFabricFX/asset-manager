@model AssetManager.Web.ViewModels.CategoryViewModel
@using AssetManager.Web.ViewModels
@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Category</h2>

<hr />
<div class="row">
    <!-- right column -->
    <div class="col-md-8 col-md-offset-2">
        <div class="box box-info">
            <div class="box-header with-border">

            </div>
            <form asp-controller="Categories" method="post" class="form-horizontal">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="box-body">
                    <input type="hidden" asp-for="Id" />

                    <div class="form-group">
                        <label asp-for="Name" class="control-label col-md-3"></label>
                        <div class="col-md-7">
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Type" class="control-label col-md-3"></label>
                        <div class="col-md-7">

                            <select asp-for="Type" asp-items="Html.GetEnumSelectList<CatagoryTypeVM>()"></select>
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="EulaText" class="control-label col-md-3"></label>
                        <div class="col-md-7">
                            <textarea asp-for="EulaText" class="form-control"></textarea>
                            <span asp-validation-for="EulaText" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3"></label>
                        <div class="col-md-7">
                            <div class="checkbox">
                                <input asp-for="DefaultEula" /> @Html.DisplayNameFor(model => model.DefaultEula)
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3"></label>
                        <div class="col-md-7">
                            <div class="checkbox">
                                <input asp-for="CheckInEmail" /> @Html.DisplayNameFor(model => model.CheckInEmail)
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Image" class="control-label col-md-3"></label>
                        <div class="col-md-7">
                            <input asp-for="Image" class="form-control" />
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-5"></div>
                        <div class="col-sm-5">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
