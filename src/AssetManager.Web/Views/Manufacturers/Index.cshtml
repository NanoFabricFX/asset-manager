@model IEnumerable<AssetManager.Core.Entities.Manufacturer>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="box">
    <div class="box-header">
        <div class="fixed-table-toolbar">

        </div>
    </div>
    <div class="box-body">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Url)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SupportUrl)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SupportPhone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SupportEmail)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Image)
                    </th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Url)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SupportUrl)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SupportPhone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SupportEmail)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Image)
                        </td>

                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
